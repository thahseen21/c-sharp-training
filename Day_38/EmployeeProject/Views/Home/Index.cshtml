@{
    ViewData["Title"] = "Employee Details";
}

@model IEnumerable<EmployeeProject.Models.Implementation.Employee>

<div class="text-center">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Designation</th>
                <th>HireDate</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Designation</td>
                    <td>@item.HireDate</td>
                    <td>
                         <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary"> Update </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
