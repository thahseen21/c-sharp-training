@{
    ViewData["Title"] = "Home Page";
}

@model IEnumerable<EmployeeModel>

<div class="text-center">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Address</th>
                <th>Age</th>
                <th>Gender</th>
                <th>Opening Balance</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Address</td>
                    <td>@item.Age</td>
                    <td>@item.Gender</td>
                    <td>@item.OpenBalance</td>
                </tr>
            }
        </tbody>
    </table>
</div>
